/**app.wxss**/

view {
  box-sizing: border-box;
}

.container {
  width: 100%;
  height: 100%;
}

.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-col {
  display: flex;
  flex-direction: column;
}

.flex1 {
  flex: 1;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.wet {
  background-color: #664035;
  color: #fff;
}

.dry {
  background-color: #2c2b27;
  color: #fff;
}

.recyclable {
  background-color: #104883;
  color: #fff;
}

.hazardous {
  background-color: #e53122;
  color: #fff;
}

.rabish-item {
  height: 80rpx;
  font-size: 26rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
}

.rabish-item:nth-child(odd) {
  background-color: #fff;
}

.rabish-item:nth-child(even) {
  background-color: #f2f2f2;
}
