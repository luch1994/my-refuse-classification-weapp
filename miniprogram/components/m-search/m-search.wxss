.box {
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  background-color: #f2f2f2;
  border-radius: 35rpx;
  box-sizing: border-box;
  padding: 15rpx 25rpx;
  align-items: center;
  font-size: 28rpx;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  flex-basis: 40rpx;
  flex-grow: 0;
  flex-shrink: 0;
}

.search {
  margin-right: 10rpx;
}

.input {
  flex: 1;
  height: 100%;
  border: none;
}

.delete {
  padding: 5rpx;
  box-sizing: border-box;
}

.color-e {
  color: #ddd;
}
