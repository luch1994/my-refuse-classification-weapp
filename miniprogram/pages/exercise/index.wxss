/* pages/exercise/index.wxss */

.title {
  text-align: center;
  font-size: 50rpx;
  font-weight: bold;
  margin-top: 40rpx;
}

.select {
  width: 450rpx;
  height: 490rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
  margin: 40rpx auto;
}

.option {
  display: flex;
  flex-direction: column;
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  border: 2rpx solid #ddd;
  align-items: center;
  justify-content: space-evenly;
}

.option-img-box {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  /* padding: 20rpx; */
}

.option-img {
  width: 100%;
  height: 100%;
}

.option.selected {
  border-color: #1296db;
  background-color: rgba(18, 150, 219, 0.2);
}

.step {
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
}

.result-box {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: #fff;
  z-index: 10;
  font-weight: 600;
}

.total-score {
  text-align: center;
  font-size: 50rpx;
  line-height: 60rpx;
  margin: 30rpx auto;
}

.result-list {
  font-size: 25rpx;
}

.result-item {
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx;
  height: 60rpx;
}

.result-item:nth-child(odd) {
  background-color: #f7f7f7;
}

.result-item:nth-child(even) {
  background-color: #fff;
}

.trash-name {
  flex: 1;
}

.trash-type {
  flex-basis: 140rpx;
  flex-grow: 0;
  flex-shrink: 0;
  text-align: center;
}

.result {
  flex-basis: 140rpx;
  flex-grow: 0;
  flex-shrink: 0;
  text-align: center;
}

.right-icon {
  width: 30rpx;
  height: 30rpx;
}

.result {
  color: #f76455;
}

.btns {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-evenly;
  font-size: 30rpx;
}

.btn {
  width: 240rpx;
  height: 82rpx;
  margin: 0;
  border-radius: 40rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #F2F2F2;
}

.btn.theme {
  background-color: #1296db;
}