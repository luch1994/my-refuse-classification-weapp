/* pages/exercise/index.wxss */

.title {
  text-align: center;
  font-size: 50rpx;
  font-weight: bold;
  margin-top: 40rpx;
}

.select {
  width: 450rpx;
  height: 490rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
  margin: 40rpx auto;
}

.option {
  display: flex;
  flex-direction: column;
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  border: 2rpx solid #ddd;
  align-items: center;
  justify-content: space-evenly;
}

.option-img-box {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #664035;
  padding: 20rpx;
}

.option-img {
  width: 100%;
  height: 100%;
}

.option.selected {
  border-color: #1296db;
  background-color: rgba(18, 150, 219, 0.2);
}

.step {
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
}