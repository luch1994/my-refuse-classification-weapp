/* pages/components/address-info/index.wxss */

.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-col {
  display: flex;
  flex-direction: column;
}

.flex1 {
  flex: 1;
}

.address-box {
  background-color: #fff;
  height: 160rpx;
  padding: 20rpx 30rpx;
  align-items: center;
  margin-top: 20rpx;
}

.name {
  margin-right: 30rpx;
}

.address-detail {
  margin-top: 10rpx;
  color: #999;
}

.address-edit {
  flex-basis: 60rpx;
  height: 100%;
  flex-grow: 0;
  flex-shrink: 0;
  padding: 15rpx;
}

.address-edit image {
  width: 100%;
  height: 100%;
}
