/* components/m-exchange/item.wxss */

.item {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 260rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #ddd;
  font-size: 26rpx;
}

.info1 {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  flex-basis: 58rpx;
  flex-grow: 0;
  flex-shrink: 0;
  padding: 0 30rpx;
}

.goods {
  flex: 1;
  display: flex;
  width: 100%;
  height: 200rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.goods-info {
  display: flex;
  flex-direction: column;
  flex: 1;
  justify-content: space-between;
  margin-left: 16rpx;
}

.goods-img {
  width: 160rpx;
  height: 160rpx;
  flex-basis: 160rpx;
  flex-grow: 0;
  flex-shrink: 0;
}

.count-box {
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  padding: 0 25rpx;
  margin-top: 10rpx;
}

.goods-count {
  flex-basis: 100rpx;
  flex-grow: 0;
  flex-shrink: 0;
  text-align: center;
  line-height: 160rpx;
}

.price-box {
  line-height: 160rpx;
  margin-left: 10rpx;
}

.grey {
  color: #999;
}

.oragin {
  color: #ff7827;
}
